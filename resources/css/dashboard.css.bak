/* Dashboard Layout */
.dashboard {
  @apply min-h-screen bg-gray-50;
}

/* Header */
.dashboard-header {
  @apply bg-gradient-to-r from-indigo-600 to-indigo-700 text-white shadow-lg;
  background-size: 200% auto;
  animation: gradient 15s ease infinite;
}

@keyframes gradient {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* Stats Cards */
.stats-card {
  @apply bg-white rounded-xl shadow-sm overflow-hidden transition-all duration-300 hover:shadow-md;
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.stats-card:hover {
  transform: translateY(-2px);
}

.stats-icon {
  @apply rounded-lg p-3 flex-shrink-0;
  background: rgba(99, 102, 241, 0.1);
}

.stats-icon svg {
  @apply h-6 w-6;
}

/* Activity Feed */
.activity-feed {
  @apply space-y-4;
}

.activity-item {
  @apply flex items-start p-4 rounded-lg bg-white shadow-sm border border-gray-100;
  transition: all 0.2s ease;
}

.activity-item:hover {
  @apply shadow-md border-indigo-100;
  transform: translateX(2px);
}

.activity-avatar {
  @apply h-10 w-10 rounded-full flex items-center justify-center text-white font-semibold flex-shrink-0;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
}

/* Tables */
.data-table {
  @apply min-w-full divide-y divide-gray-200;
}

.data-table thead th {
  @apply px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider;
}

.data-table tbody tr {
  @apply bg-white hover:bg-gray-50 transition-colors;
}

.data-table tbody td {
  @apply px-6 py-4 whitespace-nowrap text-sm text-gray-900;
}

/* Charts */
.chart-container {
  @apply bg-white p-6 rounded-xl shadow-sm border border-gray-100;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
  .stats-grid {
    @apply grid-cols-1 gap-4;
  }
  
  .content-grid {
    @apply grid-cols-1;
  }
}

/* Loading State */
.loading-state {
  @apply flex flex-col items-center justify-center py-12;
}

.loading-spinner {
  @apply w-12 h-12 border-4 border-indigo-200 border-t-indigo-600 rounded-full animate-spin;
}

/* Empty State */
.empty-state {
  @apply text-center py-12 px-4;
}

.empty-state-icon {
  @apply mx-auto h-12 w-12 text-gray-400;
}

/* Custom Scrollbar */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  @apply bg-gray-100 rounded-full;
}

::-webkit-scrollbar-thumb {
  @apply bg-gray-300 rounded-full hover:bg-gray-400;
}

/* Animations */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-fade-in {
  animation: fadeIn 0.3s ease-out forwards;
}

/* Badges */
.badge {
  @apply inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium;
}

.badge-success {
  @apply bg-green-100 text-green-800;
}

.badge-warning {
  @apply bg-yellow-100 text-yellow-800;
}

.badge-danger {
  @apply bg-red-100 text-red-800;
}

/* Buttons */
.btn {
  @apply inline-flex items-center justify-center px-4 py-2 rounded-lg font-medium transition-colors;
}

.btn-primary {
  @apply bg-indigo-600 text-white hover:bg-indigo-700;
}

.btn-outline {
  @apply border border-gray-300 text-gray-700 hover:bg-gray-50;
}

/* Forms */
.form-input {
  @apply block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500;
}

/* Alerts */
.alert {
  @apply p-4 rounded-lg mb-4;
}

.alert-success {
  @apply bg-green-50 text-green-800 border border-green-200;
}

.alert-error {
  @apply bg-red-50 text-red-800 border border-red-200;
}
