<script setup>
import { ref, computed, onMounted } from 'vue';
import { Head, Link, usePage } from '@inertiajs/vue3';
import { format, parseISO, isThisMonth, isAfter, formatDistanceToNow } from 'date-fns';
import { fr } from 'date-fns/locale';
import EleveLayout from '@/Layouts/EleveLayout.vue';
import axios from 'axios';

// Propriétés du composant
const props = defineProps({
  user: {
    type: Object,
    required: true
  },
  stats: {
    type: Object,
    required: true,
    default: () => ({
      notes: { total: 0, moyenne: 0 },
      absences: { total: 0, non_justifiees: 0 },
      paiements: { total: 0, en_retard: 0 }
    })
  },
  prochainesSeances: {
    type: Array,
    default: () => []
  },
  derniereNotes: {
    type: Array,
    default: () => []
  },
  absences: {
    type: Array,
    default: () => []
  },
  prochainPaiement: {
    type: Object,
    default: null
  },
  notifications: {
    type: Array,
    default: () => []
  }
});

// États réactifs
const loading = ref(false);
const notifications = ref(props.notifications || []);
const unreadCount = computed(() => notifications.value.filter(n => !n.read_at).length);

// Méthodes utilitaires
const calculerMoyenne = () => {
  try {
    if (!props.derniereNotes?.length) return '--';
    const notesValides = props.derniereNotes.filter(note => 
      note?.note !== null && note?.note !== undefined
    );
    
    if (!notesValides.length) return '--';
    
    const somme = notesValides.reduce((acc, note) => {
      const noteValue = typeof note.note === 'number' ? note.note : parseFloat(note.note);
      return acc + (isNaN(noteValue) ? 0 : noteValue);
    }, 0);
    
    return (somme / notesValides.length).toFixed(2);
  } catch (error) {
    console.error('Erreur dans calculerMoyenne:', error);
    return '--';
  }
};

const formatDate = (dateString) => {
  try {
    if (!dateString) return '--';
    return format(parseISO(dateString), 'EEEE d MMMM yyyy', { locale: fr });
  } catch (error) {
    console.error('Erreur de formatage de date:', error);
    return '--';
  }
};

const formatHeure = (dateString) => {
  try {
    if (!dateString) return '--:--';
    return format(parseISO(dateString), 'HH:mm');
  } catch (error) {
    console.error('Erreur de formatage d\'heure:', error);
    return '--:--';
  }
};

const formatDateCourte = (dateString) => {
  try {
    if (!dateString) return '--';
    return format(parseISO(dateString), 'dd/MM/yyyy');
  } catch (error) {
    console.error('Erreur de formatage de date courte:', error);
    return '--';
  }
};

const formatMontant = (montant) => {
  try {
    if (montant === null || montant === undefined) return '--';
    const montantNumber = typeof montant === 'string' ? parseFloat(montant) : montant;
    return new Intl.NumberFormat('fr-FR', { 
      style: 'currency', 
      currency: 'MAD',
      minimumFractionDigits: 2,
      maximumFractionDigits: 2
    }).format(montantNumber);
  } catch (error) {
    console.error('Erreur de formatage de montant:', error);
    return '--';
  }
};

const formatRelativeDate = (dateString) => {
  try {
    if (!dateString) return '';
    return formatDistanceToNow(parseISO(dateString), { 
      addSuffix: true,
      locale: fr 
    });
  } catch (error) {
    console.error('Erreur de formatage de date relative:', error);
    return '';
  }
};

const getNoteColorClass = (note) => {
  try {
    if (!note || note.note === undefined || note.note === null) {
      return 'bg-gray-100 text-gray-800';
    }
    
    const noteValue = typeof note.note === 'number' 
      ? note.note 
      : parseFloat(note.note);
    
    if (isNaN(noteValue)) return 'bg-gray-100 text-gray-800';
    
    if (noteValue >= 16) return 'bg-green-100 text-green-800';
    if (noteValue >= 14) return 'bg-blue-100 text-blue-800';
    if (noteValue >= 12) return 'bg-yellow-100 text-yellow-800';
    if (noteValue >= 10) return 'bg-orange-100 text-orange-800';
    return 'bg-red-100 text-red-800';
  } catch (error) {
    console.error('Erreur dans getNoteColorClass:', error);
    return 'bg-gray-100 text-gray-800';
  }
};

const absencesCeMois = computed(() => {
  try {
    if (!Array.isArray(props.absences)) return [];
    return props.absences.filter(absence => {
      try {
        return isThisMonth(parseISO(absence.date_absence));
      } catch (e) {
        console.error('Erreur de traitement d\'absence:', e);
        return false;
      }
    });
  } catch (error) {
    console.error('Erreur dans absencesCeMois:', error);
    return [];
  }
});

const absencesNonJustifiees = computed(() => {
  try {
    return absencesCeMois.value.filter(absence => !absence.justifiee).length;
  } catch (error) {
    console.error('Erreur dans absencesNonJustifiees:', error);
    return 0;
  }
});

const prochainCours = computed(() => {
  try {
    if (!props.prochainesSeances?.length) return null;
    return props.prochainesSeances[0];
  } catch (error) {
    console.error('Erreur dans prochainCours:', error);
    return null;
  }
});

const markAsRead = async (notificationId) => {
  try {
    loading.value = true;
    await axios.post(route('notifications.read', notificationId));
    
    // Mise à jour locale
    const index = notifications.value.findIndex(n => n.id === notificationId);
    if (index !== -1) {
      notifications.value[index].read_at = new Date().toISOString();
    }
  } catch (error) {
    console.error('Erreur lors du marquage comme lu:', error);
  } finally {
    loading.value = false;
  }
};

const markAllAsRead = async () => {
  try {
    loading.value = true;
    await axios.post(route('notifications.read-all'));
    
    // Mise à jour locale
    notifications.value = notifications.value.map(notification => ({
      ...notification,
      read_at: notification.read_at || new Date().toISOString()
    }));
  } catch (error) {
    console.error('Erreur lors du marquage tout comme lu:', error);
  } finally {
    loading.value = false;
  }
};

const loadMoreNotifications = async () => {
  try {
    const response = await axios.get(route('eleve.notifications.load-more'), {
      params: {
        offset: notifications.value.length
      }
    });
    
    if (response.data && response.data.length > 0) {
      // Mise à jour réactive du tableau de notifications
      notifications.value = [...notifications.value, ...response.data];
    }
  } catch (error) {
    console.error('Erreur lors du chargement des notifications', error);
  }
};

// Gestion des statuts de paiement
const getPaiementStatusClass = (statut) => {
  const classes = {
    paye: 'bg-green-100 text-green-800',
    en_retard: 'bg-red-100 text-red-800',
    en_attente: 'bg-yellow-100 text-yellow-800',
    annule: 'bg-gray-100 text-gray-800',
    default: 'bg-gray-100 text-gray-800'
  };
  return classes[statut] || classes.default;
};

// Obtenir le libellé d'un statut de paiement
const getPaiementStatusLabel = (statut) => {
  const labels = {
    paye: 'Payé',
    en_attente: 'En attente',
    en_retard: 'En retard',
    annule: 'Annulé',
    default: 'Inconnu'
  };
  return labels[statut] || labels.default;
};

// Hooks de cycle de vie
onMounted(() => {
  console.log('Tableau de bord Élève monté');
  // Charger les notifications non lues au chargement
  if (unreadCount.value > 0) {
    markAllAsRead();
  }
});

